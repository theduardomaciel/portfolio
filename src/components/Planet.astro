<style>
    .planet {
        z-index: 5;

        position: absolute;
        top: 60rem;
        left: 5rem;

        animation: rotate 4s infinite alternate;
    }

    @keyframes rotate {
        from {
            transform: rotate(0deg);
        }

        to {
            transform: rotate(-3deg);
        }
    }

    @keyframes moveUp {
        from {
            transform: translate(5%, 7%);
        }

        to {
            transform: translateY(10%, -15%);
        }
    }

    @keyframes moveDown {
        from {
            transform: translateY(0%);
        }

        to {
            transform: translate(-2%, 10%);
        }
    }

    .moon1 {
        animation: moveUp 8s infinite alternate;
    }

    .moon2 {
        animation: moveDown 6s infinite alternate;
    }

    @media (min-width: 1024px) {
        .planet {
            position: absolute;
            top: 17.5rem;
            left: 10.5%;
        }
    }
</style>
