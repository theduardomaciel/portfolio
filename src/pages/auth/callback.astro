---
import AstronautDeco from "@/components/AstronautDeco.astro";
import Starfield from "@/components/Starfield.astro";
import BaseLayout from "@/layouts/BaseLayout.astro";
---

<script>
    import { setCookie } from "@/utils/cookies";
    import axios from "axios";

    async function finishLogin() {
        const urlParams = new URLSearchParams(window.location.search);
        const code = urlParams.get("code");
        const state = urlParams.get("state");

        if (code) {
            try {
                const response = await axios.post("/api/auth/signin", {
                    code,
                    state,
                });
                if (response.status === 200) {
                    setCookie("guest.id", response.data.id);
                    window.location.href = "/blog";
                }
            } catch (error) {
                console.log(error);
                window.location.href = "/blog";
            }
        } else {
            window.location.href = "/blog";
        }
    }

    window.addEventListener("load", () => {
        finishLogin();
    });
</script>

<BaseLayout>
    <div class="container">
        <div class="content">
            <h1>Ending your intergalactic journey...</h1>
            <video
                class="deco"
                autoplay
                muted
                loop
                disablepictureinpicture
                playsinline
                width="320"
                height="240"
                poster="/visual/astronaut_placeholder.png"
            >
                <source src="/visual/astronaut.webm" type="video/webm" />
                <source src="/visual/astronaut.mp4" type="video/mp4" />
            </video>
        </div>
        <Starfield data-scheme={"inverted"} class="starfield pageDeco" />
    </div>
</BaseLayout>

<style>
    .container {
        display: flex;
        flex-direction: column;
        align-items: center;
        justify-content: center;
        position: relative;

        width: 100vw;
        height: 100vh;
        overflow: hidden;
    }

    .pageDeco {
        position: absolute;
        top: 50%;
        left: 50%;
        transform: translate(-50%, -50%);
        height: 100vh;
        z-index: 5;
    }

    @media (min-width: 1024px) {
        .container .pageDeco {
            height: initial;
            width: 100vw;
        }
    }

    .content {
        display: flex;
        flex-direction: column;
        align-items: center;
        justify-content: center;
        gap: 5rem;

        max-height: 50vh;
        padding-inline: var(--margin);
    }

    .content h1 {
        font-size: 2.8rem;
        font-family: "Roboto Slab Variable";
    }

    .content p {
        font-size: 2.2rem;
        font-family: "Roboto Serif Variable";
        text-align: center;

        width: 50%;
    }
</style>
