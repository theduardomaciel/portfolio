---
import "@styles/contact.css";
import BaseLayout from "@layouts/BaseLayout.astro";

import SocialMedia from "@components/SocialMedia.astro";

import { useTranslations } from "src/i18n/utils";
import type { ui } from "src/i18n/ui";

const { lang } = Astro.params;

const t = useTranslations(lang as keyof typeof ui);
---

<BaseLayout>
    <main class="wrapper contactMessageContent">
        <h1>{t("contact.error.title")}</h1>
        <div
            style={{ display: "flex", flexDirection: "column", gap: "2.5rem" }}
        >
            <p>
                {t("contact.error.subtitle")}
                <br />
            </p>
            <SocialMedia
                excludeWhatsApp
                excludeEmail
                style={{ justifyContent: "center" }}
            />
            <h5>
                {t("contact.error.thanks")}
                <br />
                <br />
            </h5>
        </div>
        <a class="button back" href={"/"} style="padding: 1rem 2.5rem;"
            >{t("contact.return_button")}</a
        >
    </main>
</BaseLayout>
