---
import "@styles/contact.css";

import Starfield from "@components/Starfield.astro";
import ContactInput from "./ContactInput";
import Planet from "@components/Planet.astro";

import { useTranslations } from "src/i18n/utils";
import type { translations } from "src/i18n/utils";

const { lang } = Astro.params;
const t = useTranslations(lang as keyof typeof translations).contact;

const TITLE = t.title;
const SUBTITLE = t.subtitle;
---

<section class={`contact section`} id="contact">
    <div class="blob1Holder">
        <div
            class="blob1Holder blob"
            style={{
                WebkitClipPath: `url(#contactBlob1)`,
                clipPath: `url(#contactBlob1)`,
            }}
        >
            <Starfield />
            <div class="infoHolder">
                <h6>{TITLE}</h6>
                <p>{SUBTITLE}</p>
            </div>
        </div>
        <div class={`infoHolder info2`}>
            <h6>{TITLE}</h6>
            <p>{SUBTITLE}</p>
            <ContactInput lang={lang} client:idle />
        </div>
    </div>
    <div class="blob2Holder">
        <div
            class="blob"
            style={{
                WebkitClipPath: `url(#contactBlob2)`,
                clipPath: `url(#contactBlob2)`,
            }}
        >
            <Starfield
                style={{
                    position: "absolute",
                    top: "50%",
                    left: "50%",
                    transform: "translate(-50%, -50%)",
                }}
            />
        </div>
        <Planet
            style={{ position: "absolute", top: "27.5rem", right: "40%" }}
        />
    </div>
    <svg
        class="contactBlobs"
        width="200"
        height="347"
